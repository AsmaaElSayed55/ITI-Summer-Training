@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Full Name</th>
                <th>Position</th>
                <th>Salary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Id</td>
                    <td>@emp.FullName</td>
                    <td>@emp.Position</td>
                    <td>@emp.Salary</td>
                    <td>
                        <!-- asp-route-->
                        <a asp-controller="Employees" asp-action="GetDetailsView" asp-route-id="@emp.Id"> Details </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" style="text-align:right">Total</th>
                <th>@Model.Sum(emp => emp.Salary)</th>
            </tr>
        </tfoot>
    </table>
}
else
{
    <h1 class="alert alert-danger text-center">
        There is no employee.
    </h1>
}


