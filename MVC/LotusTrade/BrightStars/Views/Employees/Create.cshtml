@model Employee
<h1 class="display-4 bg-warning text-primary fw-bold text-center"> Create Employee </h1>

<div class="row" >

    <form class="col-4" method="post" asp-controller="Employees" asp-action="AddNew"> 
    <div>
         <label asp-for="FullName" class="form-control"> 
             Full Name 
         </label>
            <input type="text" asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div>
            <label asp-for="Position" class="form-label">
                Position         </label>
            <input type="text" asp-for="Position" class="form-control" />
            <span asp-validation-for="Position" class="form-control-color"></span>
    </div>
        <div>
            <label asp-for="Salary" class="form-label">
                Salary
            </label>
            <input type="number" asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-1 col-12 "> Add </button>
    </form>
    <a asp-controller="Employees" asp-action="GetIndexView" class="btn btn-secondary col-12"> Back To List 

    </a>
</div>